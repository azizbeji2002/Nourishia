<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="border-pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.ActiviteSportifController">
    <stylesheets>
        <URL value="@../styles/style.css" />
    </stylesheets>
    <top>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="header-text" text="Manage Sport Activities" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label text="Filter by Type:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="filterTypeComboBox" prefHeight="30.0" prefWidth="200.0" promptText="Select Type" />
                        <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#handleRefreshAction" prefHeight="30.0" prefWidth="100.0" styleClass="button-info" text="Refresh" textFill="WHITE" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>
                <TableView fx:id="activiteTable" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Type" />
                        <TableColumn fx:id="dureeColumn" prefWidth="100.0" text="Duration (min)" />
                        <TableColumn fx:id="frequenceColumn" prefWidth="100.0" text="Frequency" />
                        <TableColumn fx:id="planColumn" prefWidth="200.0" text="Plan" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="totalActivitiesLabel" text="Total Activities: 0">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="addBtn" mnemonicParsing="false" onAction="#handleAddAction" prefHeight="40.0" prefWidth="120.0" styleClass="button-success" text="Add" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="editBtn" mnemonicParsing="false" onAction="#handleEditAction" prefHeight="40.0" prefWidth="120.0" styleClass="button-info" text="Edit" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#handleDeleteAction" prefHeight="40.0" prefWidth="120.0" styleClass="button-danger" text="Delete" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="backBtn" mnemonicParsing="false" onAction="#handleBackAction" prefHeight="40.0" prefWidth="120.0" styleClass="button-gray" text="Back" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>