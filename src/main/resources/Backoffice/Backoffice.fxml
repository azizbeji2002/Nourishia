<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.Controllers.BackofficeController"
            prefHeight="400.0" prefWidth="600.0">

    <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="border-pane"   >
        <stylesheets>
            <URL value="@../styles/style.css" />
        </stylesheets>
        <top>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="header" BorderPane.alignment="CENTER">
                <children>
                    <Label styleClass="header-text" text="Admin Dashboard" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                </children>
            </HBox>
        </top>
        <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                <children>
                    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" styleClass="card">
                        <children>
                            <Label styleClass="section-title" text="Application Statistics" textFill="#4a90e2">
                                <font>
                                    <Font name="System Bold" size="18.0" />
                                </font>
                            </Label>
                            <HBox spacing="20">
                                <children>
                                    <VBox styleClass="dashboard-stat" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label fx:id="totalPlansLabel" text="Total Nutritional Plans: 0">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                        <padding>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                        </padding>
                                    </VBox>
                                    <VBox styleClass="dashboard-stat" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label fx:id="totalActivitiesLabel" text="Total Sport Activities: 0">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                        <padding>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                        </padding>
                                    </VBox>
                                    <VBox styleClass="dashboard-stat" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label fx:id="totalPatientsLabel" text="Total Patients: 0">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                        <padding>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                        </padding>
                                    </VBox>
                                </children>
                            </HBox>
                        </children>
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                    </VBox>
                    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" styleClass="card">
                        <children>
                            <Label styleClass="section-title" text="Management Options" textFill="#4a90e2">
                                <font>
                                    <Font name="System Bold" size="18.0" />
                                </font>
                            </Label>
                            <Button fx:id="managePlansBtn" mnemonicParsing="false" onAction="#handleManagePlansAction" prefHeight="40.0" prefWidth="250.0" styleClass="button-primary, animated-button" text="Manage Nutritional Plans" textFill="WHITE">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Button>
                            <Button fx:id="manageActivitiesBtn" mnemonicParsing="false" onAction="#handleManageActivitiesAction" prefHeight="40.0" prefWidth="250.0" styleClass="button-info, animated-button" text="Manage Sport Activities" textFill="WHITE">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Button>
                            <Button fx:id="managePatientsBtn" mnemonicParsing="false" onAction="#handleManagePatientsAction" prefHeight="40.0" prefWidth="250.0" styleClass="button-success, animated-button" text="Manage Patients" textFill="WHITE">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Button>
                        </children>
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                    </VBox>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </VBox>
        </center>
        <bottom>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" styleClass="footer" BorderPane.alignment="CENTER">
                <children>
                    <Label styleClass="footer-text" text="Â© 2025 Doctor App - All Rights Reserved" textFill="#4a90e2">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                </children>
            </HBox>
        </bottom>
    </BorderPane>

</AnchorPane>
