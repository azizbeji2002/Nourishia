{% extends 'base.html.twig' %}

{% block title %}Review Patient Questionnaire{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Review Patient Questionnaire</h1>
            <div>
                <a href="{{ path('patient_index', {'id': patient.idPatient}) }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Patient
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Patient Information</h4>
                    </div>
                    <div class="card-body">
                        <h5>{{ patient.name }} {{ patient.email }}</h5>
                        <p><strong>Email:</strong> {{ patient.email|default('Not provided') }}</p>
                        <p><strong>Phone:</strong> {{ patient.phone|default('Not provided') }}</p>
                      
                    
                    
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4>Assign Nutritional Plan</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_row(form.assignedPlan) }}
                            {{ form_row(form.doctorNotes) }}
                            
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-check-circle"></i> Assign Plan
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4>{{ questionnaire.title }}</h4>
                        <span class="badge bg-success">Submitted on {{ response.submittedAt|date('Y-m-d H:i') }}</span>
                    </div>
                    <div class="card-body">
                        <div class="questionnaire-responses">
                            {% for questionId, answer in response.answers %}
                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <strong>Question: {{ answer.question }}</strong>
                                    </div>
                                    <div class="card-body">
                                        {% if answer.answer is iterable %}
                                            <ul>
                                                {% for item in answer.answer %}
                                                    <li>{{ item }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <p>{{ answer.answer }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}