{% extends 'base.html.twig' %}

{% block title %}Patient Questionnaire Responses{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1>Patient Questionnaire Responses</h1>
        <p class="text-muted">Review and assign nutritional plans based on patient questionnaire responses</p>

        <div class="card mt-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Patient</th>
                                <th>Questionnaire</th>
                                <th>Submitted Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for response in responses %}
                                <tr>
                                    <td>
                                        <a href="{{ path('patient_show', {'id': response.patient.id}) }}">
                                            {{ response.patient.firstName }} {{ response.patient.lastName }}
                                        </a>
                                    </td>
                                    <td>{{ response.questionnaire.title }}</td>
                                    <td>{{ response.submittedAt|date('Y-m-d H:i') }}</td>
                                    <td>
                                        {% if response.status == 'completed' %}
                                            <span class="badge bg-warning">Awaiting Review</span>
                                        {% elseif response.status == 'processed' %}
                                            <span class="badge bg-success">Plan Assigned</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ response.status }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_doctor_review_response', {'id': response.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Review
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">No responses found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}