{% extends 'base.html.twig' %}

{% block title %}Modifier un poste{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded-4 animate__animated animate__fadeInUp" style="background: #f8f9fa;">
                    <div class="card-header bg-primary text-white text-center rounded-top-4">
                        <h2 class="mb-0"><i class="fas fa-edit"></i> Modifier un Post</h2>
                    </div>
                    <div class="card-body p-4">

                        {# Démarrage du formulaire avec des attributs personnalisés #}
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        {# Boucle sur tous les champs du formulaire, en excluant le champ CSRF nommé "_token" #}
                        {% for field in form %}
                            {% if field.vars.name != '_token' %}
                                <div class="mb-3">
                                    {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                    {{ form_widget(field, {'attr': {'class': 'form-control', 'placeholder': 'Entrez ' ~ field.vars.label}}) }}
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}
                        {% endfor %}

                        {# Affichage des champs restants (comme le token CSRF) en mode caché #}
                        {{ form_rest(form) }}

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill animate__animated animate__pulse animate__infinite">
                                <i class="fas fa-save"></i> Enregistrer les modifications
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
