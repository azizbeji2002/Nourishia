{% extends 'base.html.twig' %}

{% block title %}Liste des Posts{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="post-title text-center animate__animated animate__fadeIn">
            <span class="text-gradient">üìù Liste des Posts</span>
        </h1>
        <hr class="title-underline mb-5">

        <div class="text-center mb-4">
            <a href="{{ path('ajouterPoste') }}" class="btn btn-gradient btn-lg shadow-sm">‚ûï Ajouter un Poste</a>
        </div>

        {% if posts is not empty %}
            <div class="d-flex flex-column align-items-center">
                {% set sortedPosts = posts|sort((a, b) => b.isEpingle() ? 1 : -1) %}

                {% for post in sortedPosts %}
                    <div class="post-card w-100 mb-4 p-4 shadow-lg border-0 rounded-4 animate__animated animate__fadeInUp {% if post.isEpingle() %}epingle{% endif %}">

                        {% if post.isEpingle() %}
                            <div class="epingle-alert text-center p-3 mb-3 rounded-3 animate__animated animate__fadeInUp">
                                <div class="d-flex justify-content-center align-items-center">
                                    <i class="bi bi-pin-fill text-warning me-2" style="font-size: 2.5rem; animation: rotatePin 1.5s infinite;"></i>
                                    <span class="text-dark fw-bold fs-4">Ce poste est √©pingl√©!</span>
                                </div>
                            </div>
                        {% endif %}

                        <h3 class="text-primary fw-bold">{{ post.titre }}</h3>
                        <p class="text-muted">üìÖ Publi√© le :
                            {{ post.datePublication|date('d M Y') }}</p>
                        <p>
                            <strong>üìù D√©tails :</strong>
                            {{ post.contenue }}</p>

                        {% if post.commentaires is not empty %}
                            <div class="mt-3">
                                <h5 class="text-secondary">üí¨ Commentaires</h5>

                                {% for commentaire in post.commentaires %}
                                    {% if commentaire.nbrSignal >= 1 %}
                                        <div class="alert alert-warning text-center alert-fade" role="alert">
                                            üö® Ce commentaire a √©t√© signal√© pour non-conformit√© !
                                        </div>
                                    {% endif %}

                                    <div class="comment-card mt-2 p-3 bg-light rounded d-flex justify-content-between align-items-center">
                                        <p class="mb-0">{{ commentaire.contenu }}</p>

                                        {% if commentaire.nbrSignal >= 10 %}
                                            <span class="badge bg-danger">Supprim√©</span>
                                        {% else %}
                                            <div>
                                                <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-sm btn-outline-primary">‚úèÔ∏è Modifier</a>
                                                <a href="{{ path('commentaire_delete', {'id': commentaire.id}) }}" class="btn btn-sm btn-outline-danger">üóëÔ∏è Supprimer</a>
                                                <a href="{{ path('commentaire_signal', {'id': commentaire.id}) }}" class="btn btn-sm btn-outline-warning">‚ö†Ô∏è Signaler</a>
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted mt-2">Aucun commentaire pour le moment</p>
                        {% endif %}

                        <div class="d-flex justify-content-between mt-3">
                            <a href="{{ path('modifierPoste', {'id': post.id}) }}" class="btn btn-sm btn-outline-primary">‚úèÔ∏è Modifier</a>
                            <a href="{{ path('creecommentaire', {'postId': post.id}) }}" class="btn btn-sm btn-outline-success">üí¨ Ajouter un Commentaire</a>
                            <a href="{{ path('post_delete', {'id': post.id}) }}" class="btn btn-sm btn-outline-danger">üóëÔ∏è Supprimer</a>

                            {% if post.isEpingle() %}
                                <a href="{{ path('toggle_epingle', {'id': post.id}) }}" class="btn btn-sm btn-outline-info">‚ùå D√©s√©pingler</a>
                            {% else %}
                                <a href="{{ path('toggle_epingle', {'id': post.id}) }}" class="btn btn-sm btn-outline-info">üìå √âpingler</a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center animate__animated animate__fadeIn">
                üì≠ Aucun post trouv√©. Ajoutez-en un !
            </div>
        {% endif %}
    </div>

    <style>
        .post-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #9b4d96; /* Rose doux */
            margin-bottom: 15px;
            font-family: 'Roboto', sans-serif;
        }

        .title-underline {
            width: 60px;
            height: 4px;
            background: linear-gradient(to right, #ff69b4, #d36d9c); /* D√©grad√© de rose clair √† fonc√© */
            border-radius: 2px;
            margin: 0 auto 30px;
        }

        .post-card {
            background: #fff;
            width: 90%;
            max-width: 850px;
            border-radius: 15px;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .post-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        }

        .post-card.epingle {
            background: #f7e5f9; /* Rose p√¢le */
            border-left: 8px solid #ff4c9c; /* Rose vif */
            box-shadow: 0 6px 20px rgba(255, 105, 180, 0.3); /* Ombre rose douce */
        }

        .epingle-alert {
            background: linear-gradient(to right, #ff69b4, #d36d9c); /* D√©grad√© de rose vif */
            color: #fff;
            font-size: 1.1rem;
            padding: 12px 18px;
            border-radius: 10px;
            box-shadow: 0 6px 20px rgba(255, 105, 180, 0.2);
        }

        .btn-sm {
            padding: 8px 15px;
            font-size: 0.9rem;
            border-radius: 20px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-lg {
            padding: 12px 25px;
            font-size: 1.1rem;
        }

        .comment-card {
            border-left: 4px solid #ff69b4; /* Rose vif */
            background-color: #f8e0f5; /* Rose clair */
            padding: 10px 15px;
            border-radius: 8px;
        }

        .comment-card:hover {
            background-color: #f7c1e3; /* Rose moyen */
        }

        .alert-fade {
            animation: fadeOut 10s forwards;
        }

        @keyframes fadeOut {
            0% {
                opacity: 1;
            }
            100% {
                opacity: 0;
                display: none;
            }
        }

        .btn-gradient {
            background: linear-gradient(to right, #ff69b4, #d36d9c); /* D√©grad√© rose */
            color: white;
            border-radius: 50px;
            transition: background 0.3s ease;
        }

        .btn-gradient:hover {
            background: linear-gradient(to right, #d36d9c, #ff69b4); /* D√©grad√© rose invers√© */
        }

        .container {
            max-width: 1000px;
        }

        .btn {
            margin: 5px;
        }

        @keyframes rotatePin {
            0% { transform: rotate(0deg); }
            50% { transform: rotate(15deg); }
            100% { transform: rotate(0deg); }
        }

        .epingle-alert {
    background: linear-gradient(to right, #f7a7c8, #ff69b4); /* D√©grad√© de rose */
    color: white;
    font-size: 1.3rem;
    padding: 12px 20px;
    border-radius: 10px;
    box-shadow: 0 6px 20px rgba(255, 105, 180, 0.2);
    font-family: 'Roboto', sans-serif;
}

.epingle-alert span {
    font-weight: bold;
    font-size: 1.4rem;
    color: white;
}

.epingle-alert .bi-pin-fill {
    animation: rotatePin 1.5s infinite;
}
    </style>

    <link href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css" rel="stylesheet">
{% endblock %}
