            width: 80%;
            max-width: 800px;
            border-left: 5px solid #ff66b2;
            transition: all 0.3s ease-in-out;
        }

        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.15);
        }

        /* Boutons interactifs */
        .btn-animate {
