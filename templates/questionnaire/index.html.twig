{% extends 'base.html.twig' %}

{% block title %}Questionnaires{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Questionnaires</h1>
            <a href="{{ path('app_questionnaire_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Questionnaire
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Questions</th>
                            <th>Created By</th>
                            <th>Created On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for questionnaire in questionnaires %}
                        <tr>
                            <td>{{ questionnaire.title }}</td>
                            <td>{{ questionnaire.questions|length }}</td>
                            <td>{{ questionnaire.createdBy }}</td>
                            <td>{{ questionnaire.createdAt ? questionnaire.createdAt|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_questionnaire_show', {'id': questionnaire.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_questionnaire_edit', {'id': questionnaire.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No questionnaires found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}