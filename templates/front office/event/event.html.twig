{% extends 'front office/base.html.twig' %}

{% block body %}
	<div class="container-fluid events py-5 bg-light">
		<div class="container py-5">
			<div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
				<h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Nos Événements</h4>
				<h1 class="mb-5 display-3">Nos Événements
				</h1>
			</div>
			<div class="container mt-5">
				<div class="d-flex justify-content-center mb-4">
					<a href="{{ path('app_event_new') }}" class="btn btn-primary ">
						<i class="fas fa-plus me-2"></i>
						Ajouter un événement
					</a>
				</div>
				<div class="row g-5 justify-content-center">
					{% for event in events %}
						<div class="col-md-6 col-lg-6 col-xl-4 wow fadeIn" data-wow-delay="0.1s">
							<div class="events-item bg-primary rounded">
								<div class="events-inner position-relative">
									<div class="events-img overflow-hidden rounded-circle position-relative">
										{% if event.image %}
											<img src="{{ asset( event.image) }}" class="img-fluid w-100 rounded-circle" alt="{{ event.name }}">
											<div class="event-overlay">
												<a href="{{ asset( event.image) }}" data-lightbox="event-{{ event.id }}">
													<i class="fas fa-search-plus text-white fa-2x"></i>
												</a>
											</div>
										{% else %}
											<img src="{{ asset('front office/img/default-event.jpg') }}" class="img-fluid w-100 rounded-circle" alt="Image non disponible">
										{% endif %}
									</div>
									<div class="px-4 py-2 bg-secondary text-white text-center events-rate">
										{{ event.date|date('d M') }}
									</div>
									<div class="d-flex justify-content-between px-4 py-2 bg-secondary">
										<small class="text-white">
											<i class="fas fa-calendar me-1 text-primary"></i>
											{{ event.date|date('d M Y ') }}
										</small>
										<small class="text-white">
											<i class="fas fa-map-marker-alt me-1 text-primary"></i>
											{{ event.address }}
										</small>
									</div>
								</div>
								<div class="events-text p-4 border border-primary bg-white border-top-0 rounded-bottom">
									<a href="#" class="h4">{{ event.name }}</a>
									<p class="mb-2 mt-3">{{ event.description|slice(0, 100) }}...</p>
									<p>
										<strong>Capacité:</strong>
										{{ event.capacity }}
										participants</p>

									<a href="{{ path('app_reservation_new', {'event': event.id}) }}" class="btn btn-success w-100 mb-2">
										<i class="fas fa-calendar-plus"></i>
										Réserver
									</a>
									<a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-primary w-100">
										Modifier l'événement
									</a>
									<form action="{{ path('app_event_delete', {'id': event.id}) }}" method="POST" style="display:inline;">
										<button type="submit" class="btn btn-danger w-100 mt-2" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
											<i class="fas fa-trash"></i>
											Supprimer
										</button>
									</form>
								</div>
							</div>
						</div>
					{% else %}
						<p class="text-center">Aucun événement disponible pour le moment.</p>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

