<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-4">
                            {{ form_label(form.name, 'Nom complet', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom complet'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.dateReservation, 'Date de réservation', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.dateReservation, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateReservation) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.nbrPlaceReserve, 'Nombre de places', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nbrPlaceReserve, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de places souhaitées'}}) }}
                            {{ form_errors(form.nbrPlaceReserve) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.event, 'Événement', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.event, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.event) }}
                        </div>

                        <div class="text-center">
                            <button class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save me-2"></i>{{ button_label|default('Réserver') }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
