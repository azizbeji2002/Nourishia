{% extends 'front office/base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
    <!-- Reservations Section -->
    <div class="container-fluid events py-5 bg-light">
        <div class="container py-5">
            <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
                <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Mes Réservations</h4>
                <h1 class="mb-5 display-3">Liste de mes réservations</h1>
            </div>

            <div class="row g-5 justify-content-center">
                {% for reservation in reservations %}
                    <div class="col-md-6 col-lg-6 col-xl-4 wow fadeIn" data-wow-delay="0.1s">
                        <div class="events-item bg-primary rounded">
                            <div class="events-inner position-relative">
                                <div class="d-flex justify-content-between px-4 py-2 bg-secondary">
                                    <small class="text-white"><i class="fas fa-calendar me-1 text-primary"></i> {{ reservation.dateReservation|date('d M Y') }}</small>
                                    <small class="text-white"><i class="fas fa-user me-1 text-primary"></i> {{ reservation.name }}</small>
                                </div>
                            </div>
                            <div class="events-text p-4 border border-primary bg-white border-top-0 rounded-bottom">
                                <h4>Événement: {{ reservation.event.name }}</h4>
                                <p class="mb-2"><strong>Places réservées:</strong> {{ reservation.nbrPlaceReserve }}</p>
                                
                                <div class="mt-3">
                                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-info w-100 mb-2">
                                        <i class="fas fa-eye"></i> Voir détails
                                    </a>
                                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-primary w-100 mb-2">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" method="POST">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                        <button class="btn btn-danger w-100" onclick="return confirm('Êtes-vous sûr de vouloir annuler cette réservation?')">
                                            <i class="fas fa-trash"></i> Annuler
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center">
                        <p>Aucune réservation trouvée.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
