{% extends 'base2.html.twig' %}

{% block body %}
<main class="h-full pb-16 overflow-y-auto">
    <div class="container px-6 mx-auto grid">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Modifier le Plan Nutritionnel
        </h2>

        <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
            {{ form_start(form) }}

            <!-- Aliment Recommandé -->
            <label class="block text-sm">
                <span class="text-gray-700 dark:text-gray-400">Aliment recommandé</span>
                {{ form_widget(form.alimentRecommende, {'attr': {'class': 'block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'}}) }}
                <div style="color: red; font-size: 0.875rem;">
                    {{ form_errors(form.alimentRecommende) }}
                </div>
            </label>

            <!-- Aliment Évité -->
            <label class="block text-sm mt-4">
                <span class="text-gray-700 dark:text-gray-400">Aliment évité</span>
                {{ form_widget(form.alimentEvite, {'attr': {'class': 'block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'}}) }}
                <div style="color: red; font-size: 0.875rem;">
                    {{ form_errors(form.alimentEvite) }}
                </div>
            </label>

            <!-- Submit Button -->
            <div class="mt-6">
                <button type="submit"
                        class="px-4 py-2 text-white bg-purple-600 rounded-lg hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                    Enregistrer les modifications
                </button>
                <a href="{{ path('app_plan_list') }}"
                   class="px-4 py-2 ml-2 text-gray-600 bg-gray-200 rounded-lg hover:bg-gray-300 focus:outline-none focus:shadow-outline-gray">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</main>
{% endblock %}
