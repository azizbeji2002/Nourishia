{% extends 'base1.html.twig' %}

{% block body %}
<div class="container d-flex justify-content-center mt-5">
    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg py-5">
                <div class="card-body">
                    <div class="text-center">
                        <h5 class="card-title pb-3 chic-header">Modifier votre Compte</h5>
                    </div>

                    {{ form_start(f, {attr: {novalidate: 'novalidate'}}) }}

                    <div class="mb-3">
                        <label for="yourName" class="form-label">Nom</label>
                        {{ form_widget(f.nom, {'attr': {'class': 'form-control chic-input'}}) }}
                        {{ form_errors(f.nom) }}
                    </div>

                    <div class="mb-3">
                        <label for="yourPrenom" class="form-label">Prénom</label>
                        {{ form_widget(f.prenom, {'attr': {'class': 'form-control chic-input'}}) }}
                        {{ form_errors(f.prenom) }}
                    </div>

                    <div class="mb-3">
                        <label for="yourEmail" class="form-label">Adresse</label>
                        {{ form_widget(f.adr, {'attr': {'class': 'form-control chic-input'}}) }}
                        {{ form_errors(f.adr) }}
                    </div>

                    <div class="mb-3">
                        <label for="yourDate" class="form-label">Date de naissance</label>
                        {{ form_widget(f.date, {'attr': {'class': 'form-control chic-input'}}) }}
                        {{ form_errors(f.date) }}
                    </div>

                    <div class="mb-3">
                        <label for="yourTel" class="form-label">Téléphone</label>
                        {{ form_widget(f.tel, {'attr': {'class': 'form-control chic-input'}}) }}
                        {{ form_errors(f.tel) }}
                    </div>

                    <div class="mb-3">
    {{ form_label(f.isVerified, 'Vérification') }}
    {{ form_widget(f.isVerified, {'attr': {'class': 'form-check-input'}}) }}
    {{ form_errors(f.isVerified) }}
</div>


                    <div class="mb-3">
                        <button class="btn chic-btn-edit w-100" type="submit">Modifier Compte</button>
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>
        </div>
    </div>
</div>

<style>

    /* Global styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #F4F4F4;
    }

    /* Title style */
    .chic-header {
        color: #4B3F72; /* Mauve foncé */
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 25px;
        text-align: center;
    }

    /* Form styling */
    .chic-input {
        background-color: rgb(227, 219, 219);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 20px;
        padding: 10px 15px;
        margin-bottom: 15px;
        font-size: 1rem;
        color: #6A4E9C; /* Mauve foncé pour le texte */
        transition: background-color 0.3s ease;
    }

    .chic-input:focus {
        background-color: #F3E6F8; /* Mauve clair */
        outline: none;
    }

    .chic-btn-edit {
        background-color: #9C66B2; /* Mauve clair pour le bouton de modification */
        color: white;
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: 600;
        margin-top : 50px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .chic-btn-edit:hover {
        background-color: #7D4C99; /* Mauve encore plus clair pour le hover */
        transform: translateY(-2px);
    }

    /* Centering card */
    .card {
        border-radius: 15px;
        padding: 30px;
        background-color: #ffffff;
    }

    /* Form spacing */
    .mb-3 {
        margin-bottom: 1.5rem;
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .col-md-8, .col-lg-6 {
            width: 90%; /* Adapte la taille du formulaire sur mobile */
        }
    }
    
    
</style>
{% endblock %}
