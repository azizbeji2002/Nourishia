{% extends 'base.html.twig' %}

{% block title %}Backoffice - Commentaire{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-pink mb-4 animate__animated animate__fadeIn">üì≠ Gestion des Commentaires</h1>

    <div class="table-wrapper">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Poste</th>
                    <th>Commentaire</th>
                    <th>Nombre de Signale</th>
                </tr>
            </thead>
            <tbody>
                {% for postData in postComments %}
                    {% for commentData in postData.comments %}
                        <tr class="animated-row">
                            {% if loop.first %}
                                <td rowspan="{{ postData.comments|length }}" class="post-title">
                                    {{ postData.post.titre }} <!-- Affiche le titre du post -->
                                </td>
                            {% endif %}
                            <td class="comment-content">{{ commentData.comment.contenu }}</td> <!-- Affiche le contenu du commentaire -->
                            <td class="signalements-count">{{ commentData.signalements }}</td> <!-- Affiche le nombre de signalements -->
                        </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Couleurs modernes et f√©minines */
    .text-pink {
        color: #ff66b2; /* Rose doux */
        font-family: 'Arial', sans-serif;
        font-size: 2rem;
        font-weight: 700;
        text-shadow: 1px 1px 8px rgba(0, 0, 0, 0.1);
    }

    /* Style de la table et des bordures */
    .table-wrapper {
        background: linear-gradient(135deg, #f9f9f9, #ffe6f7); /* D√©grad√© l√©ger pour un fond doux */
        border-radius: 20px;
        box-shadow: 0px 4px 30px rgba(0, 0, 0, 0.2);
        padding: 20px;
        margin-top: 30px;
    }

    .table {
        border-radius: 20px;
        background: #fff;
        border: 2px solid #ffccff;
    }

    /* En-t√™tes de la table avec effet d√©grad√© */
    thead {
        background: linear-gradient(135deg, #ff66b2, #ff99cc);
        color: #fff;
        border-radius: 20px 20px 0 0;
        font-size: 1.3rem;
        font-weight: 700;
    }

    thead th {
        padding: 20px;
        font-weight: bold;
    }

    /* Contenu des cellules */
    td {
        padding: 18px;
        font-size: 1rem;
        color: #5a5a5a;
        text-align: center;
        vertical-align: middle;
        transition: all 0.3s ease;
    }

    /* Contenu des commentaires avec fond subtile */
    .comment-content {
        background: #fafafa;
        border-radius: 12px;
        padding: 15px;
        box-shadow: inset 0 4px 10px rgba(0, 0, 0, 0.05);
        color: #333;
        font-size: 1.1rem;
        text-align: justify;
        line-height: 1.6;
    }

    /* Lignes impaires */
    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9ebf6;
    }

    /* Effet de survol de ligne */
    .table-hover tbody tr:hover {
        background-color: #ffebf5;
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .animated-row {
        transition: transform 0.3s ease-in-out;
    }

    .animated-row:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    /* Cellule de signalements */
    .signalements-count {
        font-weight: bold;
        color: #ff6699;
        font-size: 1.2rem;
        background: #fff0f5;
        padding: 12px;
        border-radius: 10px;
    }

    /* Cellules des titres des posts */
    .post-title {
        background: #ffebf7;
        font-weight: 700;
        color: #ff66b2;
        text-align: center;
        border-radius: 12px;
        padding: 18px;
        font-size: 1.3rem;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    }

    /* Animation d'apparition */
    .animate__animated {
        animation-duration: 1s;
    }
</style>

<!-- Animation CSS -->
<link href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css" rel="stylesheet">
{% endblock %}
