{% extends 'base2.html.twig' %}

{% block body %}
<main class="h-full pb-16 overflow-y-auto">
    <div class="container px-6 mx-auto grid">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Modifier l'Activité Sportive
        </h2>

        <!-- Form -->
        <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
            Modifiez les détails de l'activité
        </h4>

        <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
            {{ form_start(form) }}

            <label class="block text-sm">
                <span class="text-gray-700 dark:text-gray-400">Type d'activité</span>
                {{ form_widget(form.type, {'attr': {'class': 'block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'}}) }}
                <div style="color: red; font-size: 0.875rem;">
                    {{ form_errors(form.type) }}
                </div>
            </label>

            <label class="block text-sm mt-4">
                <span class="text-gray-700 dark:text-gray-400">Durée (minutes)</span>
                {{ form_widget(form.duree, {'attr': {'class': 'block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'}}) }}
                <div style="color: red; font-size: 0.875rem;">
                    {{ form_errors(form.duree) }}
                </div>
            </label>

            <label class="block text-sm mt-4">
                <span class="text-gray-700 dark:text-gray-400">Fréquence (fois/semaine)</span>
                {{ form_widget(form.frequence, {'attr': {'class': 'block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'}}) }}
                <div style="color: red; font-size: 0.875rem;">
                    {{ form_errors(form.frequence) }}
                </div>
            </label>

            <div class="mt-6 flex">
                <button type="submit" class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                    Enregistrer les modifications
                </button>

                <a href="{{ path('plan_activities', {'id': activite.plan.idPlan}) }}" class="ml-4 px-4 py-2 text-sm font-medium leading-5 text-gray-700 transition-colors duration-150 bg-gray-200 border border-transparent rounded-lg hover:bg-gray-300 focus:outline-none focus:shadow-outline-gray">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</main>
{% endblock %}
