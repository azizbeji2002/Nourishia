{% extends 'base.html.twig' %}

{% block title %}Liste des Dossiers M√©dicaux{% endblock %}

{% block body %}
<!-- Page Header Start -->
<div class="container-fluid page-header py-5 wow fadeIn" data-wow-delay="0.1s">
